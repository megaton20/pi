  
  <style>
    /* Withdrawal Grid */
    .withdrawal-grid {
      display: grid;
      gap: 1.5rem;
      grid-template-columns: 1fr;
    }
  
    .withdrawal-card {
      display: flex;
      align-items: center;
      padding: 1rem;
      border-radius: 10px;
      background: #2a3348;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
      transition: transform 0.2s ease-in-out, background-color 0.2s ease-in-out;
    }
  
    .withdrawal-card:hover {
      transform: translateY(-5px);
      background-color: #394660;
    }
  
    .withdrawal-icon {
      font-size: 1.8rem;
      color: #6a5acd;
      margin-right: 1rem;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(106, 90, 205, 0.1);
      border-radius: 50%;
      width: 50px;
      height: 50px;
    }
  
    .withdrawal-details h5 {
      margin: 0 0 0.3rem 0;
      font-size: 1.1rem;
      font-weight: bold;
      color: #fff;
    }
  
    .withdrawal-details p {
      margin: 0;
      font-size: 0.85rem;
      color: #aaa;
    }
  
    .badge {
      font-size: 0.75rem;
      padding: 0.3rem 0.6rem;
      border-radius: 4px;
      font-weight: bold;
      margin-top: 0.3rem;
    }
  
    .badge.completed {
      background-color: #3dd598;
      color: white;
    }
  
    .badge.failed {
      background-color: #f25c54;
      color: white;
    }
  
    .badge.pending {
      background-color: #f2b354;
      color: white;
    }
  
    .withdrawal-action {
      font-size: 0.9rem;
      font-weight: bold;
      background: #6a5acd;
      color: #fff;
      border: none;
      border-radius: 6px;
      padding: 0.6rem 1rem;
      cursor: pointer;
      margin-left: auto;
      transition: background-color 0.2s ease-in-out;
    }
  
    .withdrawal-action:disabled {
      background: #555;
      cursor: not-allowed;
    }
  
    .withdrawal-action:hover:not(:disabled) {
      background-color: #584dc5;
    }
  </style>
  
  
  
