<style>
  .news-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .news-card {
    display: flex;
    background: #2a3348;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
    transition: transform 0.2s ease-in-out;
  }

  .news-card:hover {
    transform: translateY(-5px);
  }

  .news-thumbnail {
    width: 120px;
    height: 100px;
    object-fit: cover;
  }

  .news-details {
    flex: 1;
    padding: 1rem;
    color: #fff;
  }

  .news-title {
    font-size: 1.1rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .news-meta {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 0.85rem;
    color: #aaa;
  }

  .news-meta i {
    color: #6a5acd;
  }
</style>


<%- include ('./partials/topnavhome') %>

<div class="compact-container">
  <% if (news.length <= 0) { %>
    <p class="text-light empty-msg">No new update!!</p>
  <% } else { %>
    <br>
    <% news.forEach(function(data) { %>
      <div class="news-container">
        <a href="/user/news/<%= data.id %>/more" class="news-card mb-2">
          <img src="<%= data.image_url ? data.image_url : '/images/phi.png' %>" 
               alt="News Image" class="news-thumbnail">
          <div class="news-details">
            <h5 class="news-title"><%= data.title %></h5>
            <p><%= data.content.length > 80 ? data.content.substring(0, 80) + '...' : data.content %></p>
            <div class="news-meta">
              <i class="bi bi-eye"></i> <%= data.read_count || 0 %> Reads
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  <% } %>
</div>


<%- include ('./partials/bottomnav') %>