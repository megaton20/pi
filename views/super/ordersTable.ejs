

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include ('../partials/superSidebar') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include ('../partials/topbar') %>
                <!-- End of Topbar -->
                <%- include ('../partials/messages') %>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <div class=" mt-4">
                        <p>orders Pending</p>
                    <!-- Page Heading -->

                    <!-- DataTales Example -->
                        <% if(allOrders.length <= 0){ %>

                                <h1>No Order Record Found! (NORF)</h1>  
                            <% } else{ %> 
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>SN</th>
                                                    <th>Sale Id</th>
                                                    <th>Status</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% allOrders.forEach(function(data,index) { %>
                                                    <tr>
                                                        <td><%= index +1 %></td>
                                                        <td><%= data['sale_id'] %></td>
                                                        <td>
                                                            <span class="badge 
                                                                <%= data['status'] === 'incomplete' ? 'bg-warning' : 
                                                                    data['status'] === 'shipped' ? 'bg-info' : 
                                                                    data['status'] === 'complete' ? 'bg-success' : 
                                                                    data['status'] === 'canceled' ? 'bg-danger' : 
                                                                    data['status'] === 'waiting' ? 'bg-secondary' : '' %>">
                                                                <%= data['status'] %>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <a href="/super/view-order/<%= data['id'] %>" class="btn btn-primary">View</a>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                        
                                    </div>
                                <% } %>
                       
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include ('../partials/footer') %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
