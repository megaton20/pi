

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include ('../partials/superSidebar') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include ('../partials/topbar') %>
                <!-- End of Topbar -->
                <%- include ('../partials/messages') %>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Transaction Tables </h1>

                    <!-- DataTales Example -->
                    <div class=" mb-4">
                        <% if(allTransactions.length <= 0){ %>
                            <div class="card-body">
                                <h1>No Transaction Record Found !</h1>  
                            </div> 
                            <% } else{ %> 

                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                  <th>SN</th>
                                                  <th>Paystack Transaction id</th>
                                                  <th>Reference Id</th>
                                                  <th>amount</th>
                                                  <th>Currency</th>
                                                  <th>Status</th>
                                                  <th>Email</th>
                                                  <th>Paid on</th>
                                                </tr>
                                            </thead>
                                        
                                            <tbody>
                                          
                                                <% allTransactions.forEach(function(data, index) {%>
                                                    <tr>
                                                        <td><%= index +1 %></td>
                                                        <td><%= data['transaction_id'] %> </td>
                                                        <td><%= data['reference'] %> </td>
                                                        <td><%= data['amount'] %> </td>
                                                        <td><%= data['currency'] %> </td>
                                                        <td><%= data['status'] %> </td>
                                                        <td><%= data['email'] %> </td>
                                                        <td><%= data['paid_at'] %> </td>
        
                                                  
                                                   </tr> 
                                                   
                                                       <% }) %>
                                                </tbody>
                                        </table>
                                    </div>
                                </div>
                                <% } %>
                                
                                
                      
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include ('../partials/footer') %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

